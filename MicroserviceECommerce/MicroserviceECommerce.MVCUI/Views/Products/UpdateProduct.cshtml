@model MicroserviceECommerce.MVCUI.Models.ProductsModel

@{
    ViewBag.Title = "UpdateProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("PostProduct", "Products", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Product Name")
        @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Quantity Per Unit")
        @Html.TextBoxFor(x => x.QuantityPerUnit, new { @class = "form-control", type = "number" })
    </div>
    <div class="form-group">
        @Html.Label("Unit Price")
        @Html.TextBoxFor(x => x.UnitPrice, new { @class = "form-control", type = "number" })
    </div>
    <div class="form-group">
        @Html.Label("Units In Stock")
        @Html.TextBoxFor(x => x.UnitsInStock, new { @class = "form-control", type = "number" })
    </div>
    <div class="form-group">
        @Html.Label("Units On Order")
        @Html.TextBoxFor(x => x.UnitsOnOrder, new { @class = "form-control", type = "number" })
    </div>
    <div class="form-group">
        @Html.Label("Reorder Level")
        @Html.TextBoxFor(x => x.ReorderLevel, new { @class = "form-control", type = "number" })
    </div>
    <div class="form-group">
        @Html.Label("Discontinued")
        @Html.TextBoxFor(x => x.Discontinued, new { @class = "form-control", type = "number" })
    </div>

    @Html.HiddenFor(x => x.ProductID)
    @Html.HiddenFor(x => x.CategoryID)
    @Html.HiddenFor(x => x.SupplierID)
    <button class="btn btn-primary" type="submit">Güncelle</button>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
