@model MicroserviceECommerce.MVCUI.Models.EmployeeModel

@{
    ViewBag.Title = "EmployeeLogin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("EmployeesLogin", "Logins", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Employee First Name")
        @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Password")
        @Html.TextBoxFor(x => x.Password, new { @class = "form-control" ,type="password"})
    </div>
    <button class="btn btn-primary" type="submit">Log IN</button>
}

