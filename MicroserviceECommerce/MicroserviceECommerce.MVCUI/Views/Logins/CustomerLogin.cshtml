@model MicroserviceECommerce.MVCUI.Models.CustomersModel

@{
    ViewBag.Title = "CustomersLogin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("CustomersLogin", "Logins", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("CustomerID")
        @Html.TextBoxFor(x => x.CustomerID, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Password")
        @Html.TextBoxFor(x => x.Password, new { @class = "form-control" ,type="password"})
    </div>
    <button class="btn btn-primary" type="submit">Log IN</button>
}

<a class="btn btn-warning" href="~/Logins/EmployeeLogin">Employee Girişi için Tıklayınız</a>

