@model MicroserviceECommerce.MVCUI.Models.OrdersModel

@{
    ViewBag.Title = "UpdateOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("PostOrder", "Orders", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Ship Via")
        @Html.TextBoxFor(x => x.ShipVia, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Freight")
        @Html.TextBoxFor(x => x.Freight, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Ship Name")
        @Html.TextBoxFor(x => x.ShipName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Ship Address")
        @Html.TextBoxFor(x => x.ShipAddress, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Ship City")
        @Html.TextBoxFor(x => x.ShipCity, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Ship Region")
        @Html.TextBoxFor(x => x.ShipRegion, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Ship Postal Code")
        @Html.TextBoxFor(x => x.ShipPostalCode, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Ship Country")
        @Html.TextBoxFor(x => x.ShipCountry, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Status")
        @Html.TextBoxFor(x => x.Status, new { @class = "form-control" })
    </div>

    @Html.HiddenFor(x => x.OrderID)
    @Html.HiddenFor(x => x.EmployeeID)
    @Html.HiddenFor(x => x.CustomerID)
    @Html.HiddenFor(x => x.OrderDate)
    @Html.HiddenFor(x => x.ShippedDate)
    @Html.HiddenFor(x => x.RequiredDate)
    <button class="btn btn-primary" type="submit">Güncelle</button>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
